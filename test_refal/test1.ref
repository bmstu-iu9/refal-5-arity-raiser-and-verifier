$ENTRY Go { = <Job <Card>>  }

 Job  {
     0 = ;
     e.X = <Trans-line e.X>
          <Job <Card>>; }

  Trans-line {
     ' ' e.X = <Trans-line e.X>;
     e.Word ' ' e.Rest =
                 <Trans (e.Word) <Table>>' '
                 <Trans-line e.Rest>;
     = ;
     e.Word = <Trans (e.Word) <Table>>' '; }

 Table { = (('cane') 'dog')
            (('gatto') 'cat')
            (('cavallo') 'horse')
            (('rana') 'frog')
            (('porco') 'pig')
         }

  Trans {
     (e.Word) e.1 ((e.Word) e.Trans) e.2 = e.Trans;
     (e.Word) e.1  =  '***';  }

   Fact { 0 = 1;
         s.N = <Mul s.N <Fact <Sub s.N 1>>>; }
